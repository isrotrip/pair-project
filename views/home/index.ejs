    <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.4.0/Chart.min.js"></script>
  <div style="width:400px; height: 400px;">
    <canvas id="myChart"></canvas>
  </div>
<script>

var ctx = document.getElementById("myChart").getContext('2d');
var myChart = new Chart(ctx, {
    type: 'bar',
    data: {
        labels: <%- JSON.stringify(filter); %>,
        datasets: [{
            label: '# of Votes',
            data: <%- JSON.stringify(values); %>,
            backgroundColor: [
                'rgba(255, 99, 132, 0.2)',
                'rgba(54, 162, 235, 0.2)',
                'rgba(255, 206, 86, 0.2)',
                'rgba(75, 192, 192, 0.2)',
                'rgba(153, 102, 255, 0.2)',
                'rgba(255, 159, 64, 0.2)'
            ],
            borderColor: [
                'rgba(255,99,132,1)',
                'rgba(54, 162, 235, 1)',
                'rgba(255, 206, 86, 1)',
                'rgba(75, 192, 192, 1)',
                'rgba(153, 102, 255, 1)',
                'rgba(255, 159, 64, 1)'
            ],
            borderWidth: 1
        }]
    },
    options: {
    responsive: true,
    maintainAspectRatio: false,
    scales: {
        yAxes: [{
            ticks: {
                beginAtZero:true
            }
        }]
    }
}
});
</script>
    <form action="/filter" method="POST">
        <select name="type">
            <%filter.forEach(el=>{%>               
                <%if(el === selected){%>
                <option value="<%=el%>"><%=el%></option>
                <%}else{%>
                <option value="<%=el%>"><%=el%></option>
            <% }})%>
        </select>
        <input type="submit" value="go"> 
    </form>
    <table border="2">
        <tr>
            <td>id</td>
            <td>name</td>
            <td>origin</td>
            <td>prince</td>
            <td>rating</td>

        </tr>
        <% data.forEach(e =>{ %>
        <tr>

        <tr>
            <td>
                <%= e.id%>
            </td>
            <td>
                <%= e.name%>
            </td>
            <td>
                <%= e.originMadeFrom%>
            </td>
            <td>
                <%= e.price %>
            </td>
            <td>
                <%= e.rating %>
            </td>

        </tr>
        <% })%>

    </table>

